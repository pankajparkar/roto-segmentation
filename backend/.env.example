# Application
DEBUG=true
ENV=development

# API
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rotoseg

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_PATH=./storage
MAX_UPLOAD_SIZE=524288000

# AI Models
MODEL_PATH=./models
# Use smaller model for M1 Mac with 16GB RAM
SAM2_MODEL=sam2_hiera_small.pt

# Device options:
#   mps   - Apple Silicon GPU (M1/M2/M3) - RECOMMENDED for Mac
#   cuda  - NVIDIA GPU
#   cpu   - CPU only (slower but always works)
DEVICE=mps

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
